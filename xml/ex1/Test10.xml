<?xml version="1.1" encoding="UTF-8"?>

<!--  속성 
	시작 태그 안에 작성하는  데이터
	보통 부가적인 데이터를 포현할 때 사용한다
	그러나 부가 데이터와 주 데이터의 경계가 모호하기 때문에
	태그만 사용하여 작성할 수도 있고
	속성만 사용하여 작성할 수도 있다
	또는 태그와 속성을 혼합하여 작성할 수도 있다
	
	문법
	<태그명 속성명="값" 속성명="값".... ></끝태그명>
	-->

	
<books>
	<!-- 태크만으로 표현 -->
	<book>
		<title>개발의정석</title>
		<author>누군가</author>
		<page>1</page>
		<isbn>123</isbn>
		<language>외계어</language>
		<press>출판사</press>
		<description>봐도 이해안됨</description>
	</book>
	
	<!-- 속성만으로 정보 표현 -->
	<book 	
		title="개발의 정석" 
		author="누군가"
		page="1"
		isbn="123"
		language="외계어"
		press="출판사"
		dsecription="봐도 이해안됨"/>
	
	<!-- 태그와 속성을 혼합하여 책 정보 표현 -->
	<book isbn="123" language="외계어">
		<title>개발의정석</title>
		<author>누군가</author>
		<page>1</page>
		<press>출판사</press>
		<description>봐도 이해안됨</description>
	</book>


</books>