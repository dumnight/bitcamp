<?xml version="1.0" encoding="UTF-8"?>
<!-- JdbcTestMapper.xml 파일
     => "jdbc_test" 테이블을 다루는 SQL문이 들어 있다.
  -->
  
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- DAO 객체를 자동으로 생성하려면,
     namespace의 값이 인터페이스 이름과 같아야 한다. -->
<mapper namespace="java100.app.dao.BoardDao">

    <resultMap type="board" id="boardMap">
        <id column="no" property="no"/>
        <result column="conts" property="content"/>
        <result column="regdt" property="regDate"/>
        <result column="vwcnt" property="viewCount"/>
    </resultMap>

    <sql id="select1">
        select
            no, title, regdt, vwcnt
    </sql>

    <!-- select를 실행할 때 정렬 값을 입력 받기 위해 
         Map 객체를 파라미터로 받는다.  -->
    <select id="selectList" resultMap="boardMap" parameterType="map">
        <include refid="select1"/>
        from ex_board
    </select>
    
    <insert id="insert" parameterType="board">
        insert into ex_board(title,conts,regdt)
        values(#{title},#{content},now())
    </insert>
    
    <update id="update" parameterType="board">
        update ex_board set 
            title=#{title}, 
            conts=#{content}
        where no=#{no}
    </update>

    <delete id="delete" parameterType="int">
        delete from ex_board where no=#{value}
    </delete>
    
    <select id="selectOne" resultMap="boardMap" parameterType="int">
         <include refid="select1"/>
         , conts
        from ex_board
        where no=#{value}
    </select>
    
    <update id="viewCount" parameterType="board">
        update ex_board set 
          vwcnt = vwcnt + 1 
        where no=#{value}
    </update>
</mapper>  









